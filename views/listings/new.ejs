<% layout("/layouts/boilerplate") %>
<body>
   <div class="row">
      <div class="col-6 offset-3"> 
   <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <br>
    <h3 style="color:  #fe424d;">CREATE A NEW LISTING </h3>
    
    <div class="mb-3"> 
    <label for="title" class="form-label">Title</label>
    <input name="listing[title]" placeholder="enter title" class="form-control" type="text" required/>
   
    <div class="invalid-feedback">Field required</div>
   </div>
    
    <div class="mb-3"> 
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" placeholder="enter description about the place" class="form-control" type="text" required></textarea>
    
    <div class="invalid-feedback">Field required</div>
   </div>
    
   
   <div class="mb-3">
    <label for="image" class="form-label">Upload Image</label>
    <input name="listing[image]" placeholder="enter the url for image" class="form-control" type="file"/>
    
   
   </div>
    
   <div class="mb-3"> 
    <label for="price" class="form-label">Price</label>
    <input name="listing[price]" placeholder="enter price" class="form-control" type="number" required/>
    
    <div class="invalid-feedback">Enter a valid price</div>
   
   </div>
    
   <div class="row"> 
       <div class="mb-3 col-md-5"> 
       <label for="location" class="form-label">Location</label>
       <input name="listing[location]" placeholder="enter location" class="form-control" type="text" required/>
       
       <div class="invalid-feedback">Field required</div>
      
   </div>
    
   <div class="mb-3 col-md-5">
      <label for="country" class="form-label">Country</label>
      <input name="listing[country]" placeholder="country" class="form-control" type="text" required/>
      
      <div class="invalid-feedback">Field required</div>
   
   </div>
    </div>
    <br>
    
    
    <div class="btndiv">
    <button id="mybutt" class="btn btn-dark">submit</button>
    </div>
    <br>
   </form>
   </div>
</div>
</body>
